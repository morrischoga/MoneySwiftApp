<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentBalanceFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/pbname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Contact Name"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

    <TextView
        android:id="@+id/naime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@icloud.com"
        app:layout_constraintStart_toStartOf="@+id/pbname"
        app:layout_constraintTop_toBottomOf="@+id/pbname" />

    <TextView
        android:id="@+id/pbid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M1712555"
        app:layout_constraintStart_toStartOf="@+id/naime"
        app:layout_constraintTop_toBottomOf="@+id/naime" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="296dp"
        android:src="@drawable/balanceicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="AMOUNT"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="70dp"

        android:background="@drawable/text_box"
        android:hint="   Enter a message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <android.widget.Button

        android:id="@+id/payorrequest_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"

        android:background="@drawable/send_receive_button"

        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="@+id/user_id"
        app:layout_constraintStart_toEndOf="@+id/user_id"
        app:layout_constraintTop_toTopOf="@+id/user_id" />

</androidx.constraintlayout.widget.ConstraintLayout>